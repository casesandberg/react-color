{
  "name": "react-color",
  "version": "2.11.4",
  "description": "A Collection of Color Pickers from Sketch, Photoshop, Chrome & more",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/casesandberg/react-color.git"
  },
  "author": "case <case@casesandberg.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/casesandberg/react-color/issues"
  },
  "scripts": {
    "unit-test": "node_modules/.bin/mocha \"test/**/*.test.js\" --compilers js:babel-register",
    "posttest": "npm run eslint",
    "prepublish": "npm run lib",
    "jest": "node_modules/.bin/jest",
    "eslint": "node_modules/.bin/eslint src/**/*.js",
    "test": "npm run unit-test && npm run jest",
    "clean": "rm -rf lib && mkdir lib",
    "lib": "npm run clean && babel src -d lib",
    "docs": "node ./scripts/docs-server",
    "docs-dist": "node ./scripts/docs-dist"
  },
  "homepage": "http://casesandberg.github.io/react-color/",
  "keywords": [
    "react",
    "color picker",
    "react-component",
    "colorpicker",
    "picker",
    "sketch",
    "chrome",
    "photoshop",
    "material design",
    "popup"
  ],
  "dependencies": {
    "lodash": "^4.0.1",
    "material-colors": "^1.2.1",
    "reactcss": "^1.2.0",
    "tinycolor2": "^1.1.2"
  },
  "devDependencies": {
    "@case/eslint-config": "^0.1.2",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.10.4",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.5.2",
    "chai": "^3.3.0",
    "chai-spies": "^0.7.1",
    "css-loader": "^0.24.0",
    "event-stream": "^3.3.1",
    "fbjs": "^0.8.6",
    "highlight.js": "^9.3.0",
    "html-loader": "^0.3.0",
    "jest": "^16.0.1",
    "jsx-loader": "^0.13.2",
    "mocha": "^2.4.5",
    "normalize.css": "^4.1.1",
    "object-assign": "^4.1.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^0.14.0 || ^15.0.0",
    "react-context": "0.0.3",
    "react-dom": "^0.14.0 || ^15.0.0",
    "react-hot-loader": "^1.2.8",
    "react-test-renderer": "^15.3.2",
    "remarkable": "^1.6.0",
    "require-dir": "^0.3.0",
    "rimraf": "^2.5.0",
    "style-loader": "^0.13.0",
    "testdom": "^2.0.0",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  },
  "jest": {
    "rootDir": "src",
    "testRegex": "spec.js$"
  }
}
